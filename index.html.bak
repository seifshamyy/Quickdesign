        // ═══════════════════════════════════════════════════
        // MARKUP LOGIC
        // ═══════════════════════════════════════════════════
        // ═══════════════════════════════════════════════════
        // MARKUP LOGIC (Object Based)
        // ═══════════════════════════════════════════════════
        const markupCanvas = $('#markup-canvas');
        const markupCtx = markupCanvas.getContext('2d');

        let currentTool = 'freehand'; // Default to freehand for immediate drawing
        let markupState = {
            isDrawing: false,
            startX: 0,
            startY: 0,
            objects: [], // { type, x, y, w, h, color, points[] }
            selection: null, // index
            currentColor: '#E74C4C',
            history: [] // Array of objects[] states
        };

        // Initialize Markup
        function openMarkup(imageUrl) {
            const historyItem = state.history.find(h => h.url === imageUrl);
            // Load existing markup if available
            markupState.objects = historyItem && historyItem.markup ? JSON.parse(JSON.stringify(historyItem.markup)) : [];
            markupState.selection = null;

            // Set UI to match default tool
            document.querySelectorAll('.tool-btn').forEach(b => b.classList.remove('active'));
            document.querySelector('[data-tool="freehand"]').classList.add('active');
            currentTool = 'freehand';

            const img = $('#markup-bg-img');
            img.crossOrigin = 'anonymous';
            img.src = imageUrl;

            // Force display first so dimensions are calculable
            $('#view-markup').style.display = 'flex';

            img.onload = () => {
                resizeCanvas();
                renderCanvas();
                $('#view-markup').classList.add('is-active');
            };
        }

        function closeMarkup() {
            // Save local state to history item without uploading
            const currentImgSrc = $('#markup-bg-img').src;
            const historyItem = state.history.find(h => h.url === currentImgSrc);
            if (historyItem) {
                historyItem.markup = JSON.parse(JSON.stringify(markupState.objects));
            }

            // Re-render carousel to show updated markup
            updateCarousel();

            $('#view-markup').classList.remove('is-active');
        }

        $('#btn-close-markup').addEventListener('click', closeMarkup);
        $('#btn-save-markup').addEventListener('click', closeMarkup); // "Done" just closes now

        function resizeCanvas() {
            const img = $('#markup-bg-img');
            // Use natural dimensions for coordinate consistency with export
            markupCanvas.width = img.naturalWidth;
            markupCanvas.height = img.naturalHeight;

            // Display size matches the rendered image size
            // We use getBoundingClientRect to be precise
            const rect = img.getBoundingClientRect();
            markupCanvas.style.width = rect.width + 'px';
            markupCanvas.style.height = rect.height + 'px';
        }

        function renderCanvas() {
            markupCtx.clearRect(0, 0, markupCanvas.width, markupCanvas.height);
            markupCtx.lineCap = 'round';
            markupCtx.lineJoin = 'round';

            markupState.objects.forEach((obj, i) => {
                markupCtx.beginPath();
                markupCtx.strokeStyle = obj.color;
                markupCtx.lineWidth = 4;
                markupCtx.fillStyle = obj.color;

                // Highlight selection
                if (markupState.selection === i) {
                    markupCtx.shadowColor = '#fff';
                    markupCtx.shadowBlur = 10;
                } else {
                    markupCtx.shadowBlur = 0;
                }

                if (obj.type === 'freehand') {
                    if (obj.points.length > 0) {
                        markupCtx.moveTo(obj.points[0].x, obj.points[0].y);
                        for (let j = 1; j < obj.points.length; j++) {
                            markupCtx.lineTo(obj.points[j].x, obj.points[j].y);
                        }
                        markupCtx.stroke();
                    }
                } else if (obj.type === 'rect') {
                    markupCtx.strokeRect(obj.x, obj.y, obj.w, obj.h);
                } else if (obj.type === 'circle') {
                    markupCtx.beginPath();
                    // Ellipse logic
                    markupCtx.ellipse(obj.x + obj.w / 2, obj.y + obj.h / 2, Math.abs(obj.w / 2), Math.abs(obj.h / 2), 0, 0, 2 * Math.PI);
                    markupCtx.stroke();
                } else if (obj.type === 'arrow') {
                    const headlen = 15;
                    const endX = obj.x + obj.w;
                    const endY = obj.y + obj.h;
                    const angle = Math.atan2(endY - obj.y, endX - obj.x);
                    markupCtx.moveTo(obj.x, obj.y);
                    markupCtx.lineTo(endX, endY);
                    markupCtx.stroke();

                    // Arrowhead
                    markupCtx.beginPath();
                    markupCtx.moveTo(endX, endY);
                    markupCtx.lineTo(endX - headlen * Math.cos(angle - Math.PI / 6), endY - headlen * Math.sin(angle - Math.PI / 6));
                    markupCtx.lineTo(endX - headlen * Math.cos(angle + Math.PI / 6), endY - headlen * Math.sin(angle + Math.PI / 6));
                    markupCtx.fill();
                }

                // Draw handles if selected
                if (markupState.selection === i && obj.type !== 'freehand') {
                    markupCtx.shadowBlur = 0;
                    markupCtx.fillStyle = '#fff';
                    // Bottom-right handle
                    markupCtx.fillRect(obj.x + obj.w - 5, obj.y + obj.h - 5, 10, 10);
                }
            });
        }

        // TOOLBAR HANDLERS
        document.querySelectorAll('.tool-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.tool-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                currentTool = btn.dataset.tool;
                markupState.selection = null;
                renderCanvas();
            });
        });

        document.querySelectorAll('.color-opt').forEach(opt => {
            opt.addEventListener('click', () => {
                document.querySelectorAll('.color-opt').forEach(o => o.classList.remove('active'));
                opt.classList.add('active');
                markupState.currentColor = opt.dataset.color;

                // If selection exists, update its color
                if (markupState.selection !== null) {
                    markupState.objects[markupState.selection].color = markupState.currentColor;
                    renderCanvas();
                }
            });
        });

        $('#btn-clear').addEventListener('click', () => {
            markupState.objects = [];
            renderCanvas();
        });

        $('#btn-undo').addEventListener('click', () => {
            markupState.objects.pop();
            markupState.selection = null;
            renderCanvas();
        });

        // INPUT HANDLERS
        function getMarkupCoords(e) {
            const rect = markupCanvas.getBoundingClientRect();
            const scaleX = markupCanvas.width / rect.width;
            const scaleY = markupCanvas.height / rect.height;
            const clientX = e.touches ? e.touches[0].clientX : e.clientX;
            const clientY = e.touches ? e.touches[0].clientY : e.clientY;
            return {
                x: (clientX - rect.left) * scaleX,
                y: (clientY - rect.top) * scaleY
            };
        }

        markupCanvas.addEventListener('mousedown', startInteraction);
        markupCanvas.addEventListener('touchstart', startInteraction, { passive: false });

        markupCanvas.addEventListener('mousemove', dragInteraction);
        markupCanvas.addEventListener('touchmove', dragInteraction, { passive: false });

        markupCanvas.addEventListener('mouseup', endInteraction);
        markupCanvas.addEventListener('touchend', endInteraction);


        function startInteraction(e) {
            if (e.touches) e.preventDefault();
            const { x, y } = getMarkupCoords(e);
            markupState.startX = x;
            markupState.startY = y;
            markupState.isDrawing = true;

            if (currentTool === 'select') {
                // Check for handle hit first (Resize)
                if (markupState.selection !== null) {
                    const sel = markupState.objects[markupState.selection];
                    if (sel.type !== 'freehand') {
                        const handleX = sel.x + sel.w;
                        const handleY = sel.y + sel.h;
                        if (Math.abs(x - handleX) < 20 && Math.abs(y - handleY) < 20) {
                            markupState.action = 'resize';
                            return;
                        }
                    }
                }

                // Hit test for selection (reverse order)
                markupState.selection = null;
                for (let i = markupState.objects.length - 1; i >= 0; i--) {
                    const obj = markupState.objects[i];
                    if (obj.type === 'freehand') continue; // Simple hit test skip

                    if (x >= obj.x && x <= obj.x + obj.w && y >= obj.y && y <= obj.y + obj.h) {
                        markupState.selection = i;
                        markupState.action = 'move';
                        markupState.offsetX = x - obj.x;
                        markupState.offsetY = y - obj.y;
                        break;
                    }
                }
                renderCanvas();
            } else {
                // Start new shape
                const newObj = {
                    type: currentTool,
                    color: markupState.currentColor,
                    x: x, y: y, w: 0, h: 0,
                    points: [{ x, y }]
                };
                markupState.objects.push(newObj);
                markupState.selection = null; // Deselect when drawing new
            }
        }

        function dragInteraction(e) {
            if (!markupState.isDrawing) return;
            if (e.touches) e.preventDefault();
            const { x, y } = getMarkupCoords(e);

            if (currentTool === 'select') {
                if (markupState.selection !== null) {
                    const obj = markupState.objects[markupState.selection];
                    if (markupState.action === 'move') {
                        obj.x = x - markupState.offsetX;
                        obj.y = y - markupState.offsetY;
                    } else if (markupState.action === 'resize') {
                        obj.w = x - obj.x;
                        obj.h = y - obj.y;
                    }
                    renderCanvas();
                }
            } else {
                // Drawing
                const currentObj = markupState.objects[markupState.objects.length - 1];
                if (currentTool === 'freehand') {
                    currentObj.points.push({ x, y });
                } else {
                    currentObj.w = x - markupState.startX;
                    currentObj.h = y - markupState.startY;
                }
                renderCanvas();
            }
        }

        function endInteraction() {
            markupState.isDrawing = false;
            markupState.action = null;
        }

        // ═══════════════════════════════════════════════════
        // EXPORT HELPERS
        // ═══════════════════════════════════════════════════
        async function uploadMarkupAndGetUrl(originalUrl) {
            const historyItem = state.history.find(h => h.url === originalUrl);
            if (!historyItem || !historyItem.markup || historyItem.markup.length === 0) return originalUrl;

            // Re-render everything to a fresh canvas
            return new Promise((resolve, reject) => {
                const exportCanvas = document.createElement('canvas');
                const img = new Image();
                img.crossOrigin = 'anonymous';
                img.src = originalUrl;
                img.onload = async () => {
                    exportCanvas.width = img.naturalWidth;
                    exportCanvas.height = img.naturalHeight;
                    const ctx = exportCanvas.getContext('2d');

                    ctx.drawImage(img, 0, 0);

                    // Temporarily use our render logic but on this context
                    const savedCtx = markupCtx;
                    // We have to duplicate render logic or refactor renderCanvas to take ctx.
                    // Quick inline dup for stability:
                    ctx.lineCap = 'round';
                    ctx.lineJoin = 'round';
                    historyItem.markup.forEach(obj => {
                        ctx.beginPath();
                        ctx.strokeStyle = obj.color;
                        ctx.lineWidth = 4;
                        ctx.fillStyle = obj.color;

                        if (obj.type === 'freehand') {
                            if (obj.points.length > 0) {
                                ctx.moveTo(obj.points[0].x, obj.points[0].y);
                                for (let j = 1; j < obj.points.length; j++) {
                                    ctx.lineTo(obj.points[j].x, obj.points[j].y);
                                }
                                ctx.stroke();
                            }
                        } else if (obj.type === 'rect') {
                            ctx.strokeRect(obj.x, obj.y, obj.w, obj.h);
                        } else if (obj.type === 'circle') {
                            ctx.beginPath();
                            ctx.ellipse(obj.x + obj.w / 2, obj.y + obj.h / 2, Math.abs(obj.w / 2), Math.abs(obj.h / 2), 0, 0, 2 * Math.PI);
                            ctx.stroke();
                        } else if (obj.type === 'arrow') {
                            const headlen = 15;
                            const endX = obj.x + obj.w;
                            const endY = obj.y + obj.h;
                            const angle = Math.atan2(endY - obj.y, endX - obj.x);
                            ctx.moveTo(obj.x, obj.y);
                            ctx.lineTo(endX, endY);
                            ctx.stroke();
                            ctx.beginPath();
                            ctx.moveTo(endX, endY);
                            ctx.lineTo(endX - headlen * Math.cos(angle - Math.PI / 6), endY - headlen * Math.sin(angle - Math.PI / 6));
                            ctx.lineTo(endX - headlen * Math.cos(angle + Math.PI / 6), endY - headlen * Math.sin(angle + Math.PI / 6));
                            ctx.fill();
                        }
                    });

                    exportCanvas.toBlob(async (blob) => {
                        const safeName = `markup_${Date.now()}_${Math.random().toString(36).substring(7)}.png`;
                        const { error } = await sb.storage.from(CONFIG.BUCKET).upload(safeName, blob);
                        if (error) { reject(error); return; }
                        const { data: { publicUrl } } = sb.storage.from(CONFIG.BUCKET).getPublicUrl(safeName);
                        resolve(publicUrl);
                    }, 'image/png');
                };
                img.onerror = reject;
            });
        }

    </script>
