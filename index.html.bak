        async function processDesign(isRefine) {
            let userNotes = '';

            if (isRefine) {
                userNotes = els.refineInput.value.trim();
                // Allow empty for re-roll, but generally encourage prompt
                if (!userNotes) return showError('Please describe your changes.');

                els.btnRefine.innerHTML = '<span>⏳ Refining...</span>';
                els.btnRefine.disabled = true;
                spawnParticles(); // Trigger effect on start
            } else {
                userNotes = $('#notes-input').value.trim();
                transitionTo(views.prefs, views.loading);
                updateSteps(3);
                startLoadingAnimation();
            }

            try {
                // Determine endpoint: Refine -> Refine Hook, Sketch -> Sketch Hook, Photo -> Initial Hook
                const endpoint = isRefine
                    ? CONFIG.WEBHOOK_REFINE
                    : (state.isSketch ? CONFIG.WEBHOOK_SKETCH : CONFIG.WEBHOOK_INITIAL);

                let sourceImage = isRefine
                    ? state.history[state.historyIndex].url
                    : state.uploadedUrl;

                // Check for deferred markup upload
                if (isRefine) {
                    els.btnRefine.innerHTML = '<span>⏳ Uploading Feedback...</span>';
                    try {
                        sourceImage = await uploadMarkupAndGetUrl(sourceImage);
                    } catch (e) {
                        console.error("Markup upload failed", e);
                        // Fallback to original image if markup fails? Or stop? 
                        // Let's stop and warn
                        throw new Error("Failed to upload markup: " + e.message);
                    }
                    els.btnRefine.innerHTML = '<span>⏳ Refining...</span>';
                }

                // Payload Fix: Refine = Text Only
                const preferencesObj = isRefine
                    ? { notes: userNotes, prompt: userNotes }
                    : { material: state.material, color: state.color, notes: userNotes };

                const params = new URLSearchParams();
                params.append('link', sourceImage);
                params.append('preferences', JSON.stringify(preferencesObj));

                const finalUrl = `${endpoint}?${params.toString()}`;

                const response = await fetch(finalUrl, { method: 'GET' });
                if (!response.ok) throw new Error(`Server error: ${response.status}`);

                const text = await response.text();
                let resultUrl = text.trim();
                try {
                    const json = JSON.parse(text);
                    resultUrl = json.response || json.url || json.link || json.output || json.image || resultUrl;
                } catch (_) { }

                if (!resultUrl || !resultUrl.startsWith('http')) throw new Error('Invalid response');

                // Success
                clearInterval(progressInterval);
                els.loadingFill.style.width = '100%';

                if (!isRefine) {
                    await sleep(800);
                    clearInterval(msgInterval);
                    stopLoadingAnimation();
                }

                // Add to history
                // NON-DESTRUCTIVE: Append to end even if we went back
                // if (state.historyIndex < state.history.length - 1) {
                //     state.history = state.history.slice(0, state.historyIndex + 1);
                // }
                state.history.push({ url: resultUrl, note: userNotes });
                state.historyIndex = state.history.length - 1;

                // Update UI
                updateCarousel();
                spawnParticles(); // Magic Reveal

                if (isRefine) {
                    els.refineInput.value = '';
                    els.btnRefine.innerHTML = '<span>✨ Refine</span>';
                    els.btnRefine.disabled = false;
                } else {
                    transitionTo(views.loading, views.result);
                }

            } catch (err) {
                console.error(err);
                showError('Generation failed: ' + err.message);
                if (isRefine) {
                    els.btnRefine.innerHTML = '<span>✨ Refine</span>';
                    els.btnRefine.disabled = false;
                } else {
                    goToUpload();
                }
            }
        }

