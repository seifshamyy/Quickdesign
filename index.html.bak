        // CAROUSEL LOGIC
        // ═══════════════════════════════════════════════════
        function createCarouselCard(item, index) {
            const card = document.createElement('div');
            card.className = 'carousel-card';

            // Wrapper: Shrink-wraps the image exactly
            const wrapper = document.createElement('div');
            wrapper.className = 'carousel-card-inner';

            const img = document.createElement('img');
            img.src = item.url;
            img.style.objectFit = 'contain';

            wrapper.appendChild(img);
            card.appendChild(wrapper);

            // Add Markup Button (Always present, visibility handled by CSS)
            const btnMarkup = document.createElement('div');
            btnMarkup.className = 'card-action-btn';
            btnMarkup.innerHTML = `<svg viewBox="0 0 24 24"><path d="M12 20h9"></path><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path></svg>`;
            btnMarkup.title = "Draw Feedback";
            btnMarkup.onclick = (e) => {
                e.stopPropagation();
                openMarkup(item.url);
            };
            wrapper.appendChild(btnMarkup);

            // Click to nav (Card level)
            card.onclick = (e) => {
                // Ignore if clicking the action button
                if (e.target.closest('.card-action-btn')) return;

                // Find current index of THIS card in the DOM (in case it shifted, though usually static order)
                // Better: we can rely on state.history finding this item, or just use the index passed 
                // BUT: index passed is closure. If we rely on order, we should re-calc index.
                // Simpler: Just find index in state.history by URL? Or store index on card dataset.
                const myIndex = parseInt(card.dataset.index);
                if (myIndex !== state.historyIndex) {
                    state.historyIndex = myIndex;
                    updateCarousel();
                }
            };

            return card;
        }

        function updateCardMarkup(card, item) {
            const wrapper = card.querySelector('.carousel-card-inner');
            const img = wrapper.querySelector('img');

            // Clear existing markup canvas
            const existing = wrapper.querySelector('.markup-preview');
            if (existing) existing.remove();

            if (item.markup && item.markup.length > 0) {
                const canvas = document.createElement('canvas');
                canvas.className = 'markup-preview';
                canvas.style.position = 'absolute';
                canvas.style.top = '0';
                canvas.style.left = '0';
                canvas.style.width = '100%';
                canvas.style.height = '100%';
                canvas.style.objectFit = 'contain';
                canvas.style.pointerEvents = 'none';
                canvas.style.zIndex = '2';

                const render = () => {
                    canvas.width = img.naturalWidth;
                    canvas.height = img.naturalHeight;
                    const ctx = canvas.getContext('2d');
                    ctx.lineCap = 'round';
                    ctx.lineJoin = 'round';

                    item.markup.forEach(obj => {
                        ctx.beginPath();
                        ctx.strokeStyle = obj.color;
                        ctx.lineWidth = 4;
                        ctx.fillStyle = obj.color;

                        if (obj.type === 'freehand') {
                            if (obj.points.length > 0) {
                                ctx.moveTo(obj.points[0].x, obj.points[0].y);
                                for (let j = 1; j < obj.points.length; j++) {
                                    ctx.lineTo(obj.points[j].x, obj.points[j].y);
                                }
                                ctx.stroke();
                            }
                        } else if (obj.type === 'rect') {
                            ctx.strokeRect(obj.x, obj.y, obj.w, obj.h);
                        } else if (obj.type === 'circle') {
                            ctx.beginPath();
                            ctx.ellipse(obj.x + obj.w / 2, obj.y + obj.h / 2, Math.abs(obj.w / 2), Math.abs(obj.h / 2), 0, 0, 2 * Math.PI);
                            ctx.stroke();
                        } else if (obj.type === 'arrow') {
                            // Arrow logic similar to before
                            const headlen = 15;
                            const endX = obj.x + obj.w;
                            const endY = obj.y + obj.h;
                            const angle = Math.atan2(endY - obj.y, endX - obj.x);
                            ctx.moveTo(obj.x, obj.y);
                            ctx.lineTo(endX, endY);
                            ctx.stroke();
                            ctx.beginPath();
                            ctx.moveTo(endX, endY);
                            ctx.lineTo(endX - headlen * Math.cos(angle - Math.PI / 6), endY - headlen * Math.sin(angle - Math.PI / 6));
                            ctx.lineTo(endX - headlen * Math.cos(angle + Math.PI / 6), endY - headlen * Math.sin(angle + Math.PI / 6));
                            ctx.fill();
                        }
                    });
                };

                if (img.complete && img.naturalWidth > 0) render();
                else img.onload = render;

                wrapper.appendChild(canvas);
            }
        }

        function updateCarousel() {
            const stage = els.carouselStage;

            // 1. Sync DOM (Append New Items)
            while (stage.children.length < state.history.length) {
                const index = stage.children.length;
                const item = state.history[index];
                const card = createCarouselCard(item, index);
                card.dataset.index = index; // Store index for click handler
                stage.appendChild(card);
            }

            // 2. Update Classes & Content
            Array.from(stage.children).forEach((card, index) => {
                const item = state.history[index];

                // Update Index (in case history shifted, though unlikely in this append-only model)
                // But generally safe to update
                card.dataset.index = index;

                // Reset Classes
                card.className = 'carousel-card'; // Clears is-center, is-left, etc.

                // Apply Position Classes
                if (index === state.historyIndex) card.classList.add('is-center');
                else if (index === state.historyIndex - 1) card.classList.add('is-left');
                else if (index === state.historyIndex + 1) card.classList.add('is-right');
                else if (index < state.historyIndex) card.classList.add('is-hidden-left');
                else card.classList.add('is-hidden-right');

                // Refresh Markup (changes often)
                updateCardMarkup(card, item);
            });

            // Update Nav Buttons
            els.navPrev.disabled = state.historyIndex <= 0;
            els.navNext.disabled = state.historyIndex >= state.history.length - 1;

            // Update Download Link
            const currentItem = state.history[state.historyIndex];
            if (currentItem) {
                els.btnDownload.href = currentItem.url;
            }
        }

        // Nav Click Handlers
        els.navPrev.addEventListener('click', () => {
            if (state.historyIndex > 0) {
                state.historyIndex--;
                updateCarousel();
            }
        });

        els.navNext.addEventListener('click', () => {
            if (state.historyIndex < state.history.length - 1) {
                state.historyIndex++;
                updateCarousel();
            }
        });

        // ═══════════════════════════════════════════════════
        // PARTICLE EFFECT (Simplified/Cleaned)
        // ═══════════════════════════════════════════════════
        let particleAnimationId = null;
        function spawnParticles() {
            const canvas = els.particleCanvas;
            const ctx = canvas.getContext('2d');

            // Full screen overlay
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;

            if (particleAnimationId) cancelAnimationFrame(particleAnimationId);

            let particles = [];
            for (let i = 0; i < 200; i++) {
                particles.push({
                    x: canvas.width / 2,
                    y: canvas.height / 2,
                    vx: (Math.random() - 0.5) * 15,
                    vy: (Math.random() - 0.5) * 15,
                    size: Math.random() * 4 + 1,
                    alpha: 1,
                    color: `hsl(${40 + Math.random() * 15}, 80%, 60%)`
                });
            }

            function animate() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                let alive = false;
                particles.forEach(p => {
                    p.x += p.vx;
                    p.y += p.vy;
                    p.alpha -= 0.02;
                    p.size *= 0.95;
                    if (p.alpha > 0) {
                        alive = true;
                        ctx.fillStyle = p.color;
                        ctx.globalAlpha = p.alpha;
                        ctx.beginPath();
                        ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
                        ctx.fill();
                    }
                });

                if (alive) particleAnimationId = requestAnimationFrame(animate);
                else ctx.clearRect(0, 0, canvas.width, canvas.height);
            }
            animate();
        }

