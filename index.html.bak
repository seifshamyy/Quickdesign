        .sk-row label {
            font-size: 13px;
            color: var(--sk-muted);
        }

        .sk-row .val {
            font-family: var(--mono);
            font-size: 12px;
            color: var(--sk-stroke);
            opacity: .9;
        }

        .sk-toggle {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .sk-switch {
            width: 44px;
            height: 26px;
            border-radius: 999px;
            border: 1px solid rgba(255, 255, 255, .14);
            background: rgba(255, 255, 255, .05);
            position: relative;
            cursor: pointer;
            transition: background .15s ease, border-color .15s ease;
        }

        .sk-switch::after {
            content: "";
            position: absolute;
            top: 3px;
            left: 3px;
            width: 20px;
            height: 20px;
            border-radius: 999px;
            background: rgba(255, 255, 255, .88);
