        // GENERATION LOGIC
        // ═══════════════════════════════════════════════════
        els.btnGenerate.addEventListener('click', () => processDesign(false));
        els.btnRefine.addEventListener('click', () => processDesign(true));
        els.refineInput.addEventListener('keypress', (e) => {
