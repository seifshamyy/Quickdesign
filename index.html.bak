        async function handleFile(file) {
            if (!file.type.match(/^image\/(jpeg|png|webp)$/)) return showError('Please upload a JPG, PNG, or WEBP.');
            if (file.size > 15 * 1024 * 1024) return showError('File too large (Max 15MB).');

            els.uploadProgress.classList.add('is-visible');
            animateProgressRing(0);

            state.localPreviewUrl = URL.createObjectURL(file);
            els.thumbImg.src = state.localPreviewUrl;

            try {
                const progressInterval = setInterval(() => {
                    const current = parseFloat(els.progressCircle.style.strokeDashoffset || 157);
                    if (current > 50) animateProgressRing(((157 - (current - 5)) / 157) * 100);
                }, 200);

                const ext = file.name.split('.').pop() || 'png';
                const safeName = `kitchen_${Date.now()}_${Math.random().toString(36).substr(2, 9)}.${ext}`;

                const { data, error } = await sb.storage.from(CONFIG.BUCKET).upload(safeName, file, { cacheControl: '3600', upsert: false });
                clearInterval(progressInterval);
                if (error) throw error;

                animateProgressRing(100);
                const { data: { publicUrl } } = sb.storage.from(CONFIG.BUCKET).getPublicUrl(safeName);
                state.uploadedUrl = publicUrl;

                await sleep(400);
                els.uploadProgress.classList.remove('is-visible');

                // Add redirect listener again just in case (though it should be static now)
                // Actually no, we attached it statically.

                transitionTo(views.upload, views.prefs);
                updateSteps(2);

            } catch (err) {
                console.error(err);
                showError('Upload failed.');
                els.uploadProgress.classList.remove('is-visible');
            }
        }

        function animateProgressRing(percent) {
            els.progressCircle.style.strokeDashoffset = 157 - (percent / 100) * 157;
        }

